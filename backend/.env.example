# Database Configuration
# NOTE: Database credentials are now configured in the root .env file
# These values can override the root .env if needed
DB_HOST=db
DB_PORT=5432
DB_NAME=gdgoc_certs
DB_USER=postgres
DB_PASSWORD=postgres

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration (comma-separated list of allowed origins)
# NOTE: This can also be configured in the root .env file
ALLOWED_ORIGINS=https://sudo.certs-admin.certs.gdg-oncampus.dev,https://certs.gdg-oncampus.dev

# Public Hostname (used in email links)
# NOTE: This can also be configured in the root .env file
PUBLIC_HOSTNAME=certs.gdg-oncampus.dev

# SMTP Configuration
# NOTE: SMTP settings are now primarily configured in the root .env file
# for easier management across all services. You can override them here if needed.
# Supported providers: Brevo, Gmail, SendGrid, Mailgun, AWS SES, etc.
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=starttls
# SMTP_SECURE options:
#   - starttls: Use STARTTLS (port 587, recommended)
#   - ssl: Use SSL/TLS (port 465)
#   - none: No encryption (port 25, not recommended)
SMTP_USER=your-brevo-smtp-user
SMTP_PASS=your-brevo-smtp-password
SMTP_FROM="GDGoC Certificates" <noreply@gdg-oncampus.dev>
